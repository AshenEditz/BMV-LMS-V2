{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SCHOOL_NAME": "Buthpitiya M.V",
    "NEXT_PUBLIC_SCHOOL_LOGO": "https://i.imgur.com/c7EilDV.png",
    "NEXT_PUBLIC_MAIN_WEBSITE": "https://buthpitiyamv.schweb.lk"
  }
}